@model Nueva_carpeta.Models.PasoMatrizViewModel

@{
    ViewData["Title"] = "Paso actual";
}

<h2>@Model.Titulo</h2>

@if (Model.Matriz != null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                @for (int j = 0; j < Model.Matriz.GetLength(1); j++)
                {
                    <th>Columna @(j + 1)</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Matriz.GetLength(0); i++)
            {
                <tr>
                    @for (int j = 0; j < Model.Matriz.GetLength(1); j++)
                    {
                        <td>@Model.Matriz[i, j]</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}

<form asp-action="SiguientePaso" method="post">
    <button class="btn btn-primary" @(Model.BloquearSiguiente ? "disabled" : "")
        onclick="location.href='@Url.Action("SiguientePaso", "Matriz")'">
        Siguiente paso
    </button>

</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Reiniciar</a>
